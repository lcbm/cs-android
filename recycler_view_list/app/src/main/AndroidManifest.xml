<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.cesarschool.recycler_view_list">

	<uses-permission android:name="android.permission.ACTION_OPEN_DOCUMENT" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.Anilist">
		<activity
			android:name="com.cesarschool.recycler_view_list.DetailsActivity"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:parentActivityName="com.cesarschool.recycler_view_list.MainActivity" />
		<activity
			android:name="com.cesarschool.recycler_view_list.SecondActivity"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:windowSoftInputMode="adjustPan"
			android:parentActivityName="com.cesarschool.recycler_view_list.MainActivity" />
		<activity
			android:name="com.cesarschool.recycler_view_list.MainActivity"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:launchMode="singleTask">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>
